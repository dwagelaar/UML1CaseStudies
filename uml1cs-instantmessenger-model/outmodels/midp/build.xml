<?xml version="1.0" encoding="UTF-8"?>
<project name="MIDPInstantMessenger" default="all">
	<property name="atlcommandline.path" value="../../../uml1cs-atlcommandline/"/>
	<property name="transf.path" value="../../../uml1cs-transformations/"/>
	<property name="transf.uri" value="file:${transf.path}"/>
	<property name="lib.config" value="file:config.asm"/>
	<property name="lib.java" value="${transf.uri}lib/Java.asm"/>
	<property name="lib.merge" value="${transf.uri}lib/MergeHelpers.asm"/>
	<property name="mmodel.path" value="${transf.path}metamodels/"/>
	<property name="mmodel.uml" value="${mmodel.path}M2_DiagramInterchangeModel.ecore"/>
	<property name="mmodel.mdruml" value="${mmodel.path}M2_DiagramInterchangeModel.xmi"/>
	<property name="model.path" value="../../models/"/>
	<property name="rmodel.path" value="${transf.path}models/"/>
	<property name="rmodel.ocltypes" value="${rmodel.path}OclTypes.emf.xmi"/>
	<property name="rmodel.javatypes" value="${rmodel.path}JavaTypes.emf.xmi"/>
	<property name="rmodel.observer" value="${rmodel.path}Observer.emf.xmi"/>
	<property name="rmodel.applet" value="${rmodel.path}Applet.emf.xmi"/>
	<property name="rmodel.midlet" value="${rmodel.path}MIDlet.emf.xmi"/>
	<property name="target.path" value="../../../uml1cs-instantmessenger-midp/src/"/>
		
	<path id="atl.class.path">
		<fileset dir="${atlcommandline.path}lib">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="mergeFeature">
		<java fork="true" failonerror="true" classname="org.atl.commandline.Main">
			<classpath refid="atl.class.path"/>
			<arg value="--trans"/>
				<arg value="${transf.uri}MergeModel.asm"/>
			<arg value="--in"/>
				<arg value="IN=${model.in}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--in"/>
				<arg value="MERGE=${model.path}${model.merge}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--out"/>
				<arg value="OUT=${model.out}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--lib"/><arg value="MergeHelpers=${lib.merge}"/>
		</java>
	</target>
	
	<target name="mergeFeatures">
		<antcall target="mergeFeature">
			<param name="model.in" value="${model.path}InstantMessengerModel.emf.xmi"/>
			<param name="model.merge" value="InstantMessengerLCDUI.emf.xmi"/>
			<param name="model.out" value="im-midp-01-LCDUI.xmi"/>
		</antcall>
		<antcall target="mergeFeature">
			<param name="model.in" value="im-midp-01-LCDUI.xmi"/>
			<param name="model.merge" value="InstantMessengerSMS.emf.xmi"/>
			<param name="model.out" value="im-midp-02-SMS.xmi"/>
		</antcall>
		<antcall target="mergeFeature">
			<param name="model.in" value="im-midp-02-SMS.xmi"/>
			<param name="model.merge" value="InstantMessengerJabber.emf.xmi"/>
			<param name="model.out" value="im-midp-03-Jabber.xmi"/>
		</antcall>
		<antcall target="mergeFeature">
			<param name="model.in" value="im-midp-03-Jabber.xmi"/>
			<param name="model.merge" value="InstantMessengerMEJabber.emf.xmi"/>
			<param name="model.out" value="im-midp-04-MEJabber.xmi"/>
		</antcall>
		<antcall target="mergeFeature">
			<param name="model.in" value="im-midp-04-MEJabber.xmi"/>
			<param name="model.merge" value="InstantMessengerLocal.emf.xmi"/>
			<param name="model.out" value="im-midp-05-Local.xmi"/>
		</antcall>
	</target>
	
	<target name="refine">
		<java fork="true" failonerror="true" classname="org.atl.commandline.Main">
			<classpath refid="atl.class.path"/>
			<arg value="--trans"/>
				<arg value="${transf.uri}${model.transf}"/>
			<arg value="--in"/>
				<arg value="IN=${model.in}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--out"/>
				<arg value="OUT=${model.out}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--lib"/><arg value="Java=${lib.java}"/>
		</java>
	</target>
	
	<target name="refineWithMerge">
		<java fork="true" failonerror="true" classname="org.atl.commandline.Main">
			<classpath refid="atl.class.path"/>
			<arg value="--trans"/>
				<arg value="${transf.uri}${model.transf}"/>
			<arg value="--in"/>
				<arg value="IN=${model.in}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--in"/>
				<arg value="MERGE=${model.merge}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--out"/>
				<arg value="OUT=${model.out}"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--lib"/><arg value="Java=${lib.java}"/>
			<arg value="--lib"/><arg value="MergeHelpers=${lib.merge}"/>
		</java>
	</target>
	
	<target name="refineAll" depends="mergeFeatures">
		<antcall target="refineWithMerge">
			<param name="model.transf" value="AssociationAttributes.asm"/>
			<param name="model.in" value="im-midp-05-Local.xmi"/>
			<param name="model.merge" value="${rmodel.ocltypes}"/>
			<param name="model.out" value="im-midp-11-Attributes.xmi"/>
		</antcall>
		<antcall target="refineWithMerge">
			<param name="model.transf" value="Accessors.asm"/>
			<param name="model.in" value="im-midp-11-Attributes.xmi"/>
			<param name="model.merge" value="${rmodel.ocltypes}"/>
			<param name="model.out" value="im-midp-12-Accessors.xmi"/>
		</antcall>
		<antcall target="refineWithMerge">
			<param name="model.transf" value="Observer.asm"/>
			<param name="model.in" value="im-midp-12-Accessors.xmi"/>
			<param name="model.merge" value="${rmodel.observer}"/>
			<param name="model.out" value="im-midp-13-Observer.xmi"/>
		</antcall>
		<antcall target="refine">
			<param name="model.transf" value="Singleton.asm"/>
			<param name="model.in" value="im-midp-13-Observer.xmi"/>
			<param name="model.out" value="im-midp-14-Singleton.xmi"/>
		</antcall>
		<antcall target="refineWithMerge">
			<param name="model.transf" value="MIDlet.asm"/>
			<param name="model.in" value="im-midp-14-Singleton.xmi"/>
			<param name="model.merge" value="${rmodel.midlet}"/>
			<param name="model.out" value="im-midp-15-MIDlet.xmi"/>
		</antcall>
		<antcall target="refineWithMerge">
			<param name="model.transf" value="DataTypes.asm"/>
			<param name="model.in" value="im-midp-15-MIDlet.xmi"/>
			<param name="model.merge" value="${rmodel.javatypes}"/>
			<param name="model.out" value="im-midp-16-DataTypes.xmi"/>
		</antcall>
		<antcall target="refine">
			<param name="model.transf" value="AsyncMethods.asm"/>
			<param name="model.in" value="im-midp-16-DataTypes.xmi"/>
			<param name="model.out" value="im-midp-17-Async.xmi"/>
		</antcall>
	</target>
	
	<target name="toMDR" depends="refineAll">
		<java fork="true" failonerror="true" classname="org.atl.commandline.Main">
			<classpath refid="atl.class.path"/>
			<arg value="--trans"/>
				<arg value="${transf.uri}ModelCopy.asm"/>
			<arg value="--in"/>
				<arg value="IN=im-midp-17-Async.xmi"/>
				<arg value="INMODEL=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--out"/>
				<arg value="OUT=im-midp-mdr.xmi"/>
				<arg value="OUTMODEL=${mmodel.mdruml}"/>
				<arg value="MDR"/>
		</java>
	</target>

	<target name="output" depends="toMDR">
		<exec dir="." executable="${transf.path}forOutput.sh" output="im-midp-output.xmi" logError="true">
			<arg line="im-midp-mdr.xmi"/>
		</exec>
	</target>

	<target name="toJava" depends="refineAll">
        <delete>
        	<fileset dir="${target.path}"/>
        </delete>
		<java fork="true" failonerror="true" classname="org.atl.commandline.Main">
			<classpath refid="atl.class.path"/>
			<arg value="--trans"/>
				<arg value="${transf.uri}UMLtoJava.asm"/>
			<arg value="--in"/>
				<arg value="IN=im-midp-17-Async.xmi"/>
				<arg value="UML=${mmodel.uml}"/>
				<arg value="EMF"/>
			<arg value="--lib"/><arg value="config=${lib.config}"/>
		</java>
	</target>
	
	<target name="all" depends="toJava"/>
</project>